<div class='title'>
<h1>Your bookings index</h1>
</div>

<% my_bookings = @bookings.select { |booking| booking.user_id == current_user.id} %>
<% if my_bookings.empty? %>
<br>
<h5 class="text-center">You've not made any bookings yet!</h5>
<% else %>
<div class="container">
  <div class="my-cards">
    <% my_bookings.each do |booking| %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">Booking reference: <%= booking.id %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary"> Cost: <%= number_to_currency(booking.total_price, :unit => "Â£") %></h6>
          <p class="card-text"> Date: <%= booking.date %> </p>
          <%= link_to 'Modify', edit_plane_booking_path(booking.plane.id, booking.id), class: "btn btn-primary"  %>
          <%= link_to "Cancel it!",
            booking_path(booking),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% end %>
