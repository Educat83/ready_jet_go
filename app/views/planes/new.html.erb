<div class="new-plane-container">
  <h1>Register your Plane</h1>

  <%= simple_form_for(@plane) do |f| %>
    <%= f.input :model %>
    <%= f.input :pax_capacity %>
    <%= f.input :fh_range %>
    <%= f.input :fh_price %>
    <%= f.input :location, collection: ['LHR', 'STN', 'GTW', 'LTN', 'LCY']%>
    <%= f.input :photo, as: :file %>
    <%= f.hidden_field :user_id, value: @plane.user_id %>
    <div class="submit">
      <%= f.submit %>
    </div>
  <% end %>
</div>
