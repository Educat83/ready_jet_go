<div class="text-center">
  <h1 class="myh1">Our planes</h1>
</div>


<%# <% cl_image_path(:cloud_name => cloudinary)%>

<div class="container pb-5">
  <div class="row col-4 col-sm-12 cards">
    <% @planes.each do |plane| %>
      <a href="<%= plane_path(plane.id) %>" class="card-link">
        <div class="mycard">
          <div class="card-img-top text-center" id="pic">
            <%= cl_image_tag(plane.photo.key, width: 400, height: 240, crop: :fill) %>
          </div>
          <div class="card-body my-3">
            <h3><strong><%= plane.model %></strong></h3>
            <br>
            <div class="icon-text">
              <span>
                <i class="fa-solid fa-users"></i>
                <h5><strong> <%= plane.pax_capacity %> seats</strong></h5>
              </span>
              <span>
                <i class="fa-solid fa-plane"></i>
                <h5> <%= plane.fh_range.to_i %> hrs</h5>
              </span>
            </div>
          </div>
        </div>
      </a>
    <% end %>

  </div>
  <div class="p-5">
    <a href="<%= new_plane_path%>" class="button">Have your own plane that you'd like to list? Click here!</a>
  </div>
</div>
